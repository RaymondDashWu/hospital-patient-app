<fieldset>
    <legend>Edit Message</legend>
  <!-- MESSAGE TITLE -->
    <div class = "form-group">
        <label for="message-title">Title</label><br>
        <input class="form-control" id="message-title" type="text" name="message_title" value="{{messages.message_title}}"/>
    </div>

  <!-- MESSAGE CONTENT -->
    <div class = "form-group">
        <label for="message-content">Content</label><br>
        <input class="form-control" id="message-content" type="text" name="message_content" value="{{messages.message_content}}" />
    </div>
</fieldset>
